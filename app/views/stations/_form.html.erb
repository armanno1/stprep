<div class="row">
  <div class="col-sm-12">
    <%= form_for(@station, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if params[:course_id]%>
        <% course = Course.find_by_id(params[:course_id]) %>
        <% station_categories = course.station_categories.all %>
      <% else %>
        <% if @course %>
          <% course = @course %>
          <% station_categories = @course.station_categories.all %>
        <% else %>
          <% station_categories = StationCategory.all %>
        <% end %>
      <% end %>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-2">
          <%= f.label :title %>
        </div>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of station", autofocus: true  %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Station Description" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-sm-2">
          <%= f.label :scenario %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_area :scenario, rows: 5, class: "form-control", placeholder: "Station Scenario" %>
        </div>
      </div>
    </div>

    <% if course %>
      <%= f.hidden_field :course_id, :value => "#{course.id}" %>
      <p><%= "#{course.title} has been selected (!)" %></p>
    <% else %>
      <div class='form-group'>
        <div class="row">
          <div class="col-sm-12">
            <%= f.collection_select(:course_id, Course.all, :id, :title, {}, {:class=>'form-control'}) %>
          </div>
        </div>
      </div>
    <% end %>

    <div class='form-group'>
      <div class="row">
        <div class="col-sm-12">
          <%= f.collection_select(:station_category_id, station_categories, :id, :name, {}, {:class=>'form-control'}) %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
