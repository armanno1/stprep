<%= form_for(@question, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :title %>
    </div>
    <div class="col-sm-12">
      <%= f.text_field :title, class: "form-control", placeholder: "Question", autofocus: true  %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :answer %>
    </div>
    <div class='col-sm-12'>
      <%= f.text_area :answer, rows: 10, class: "form-control", placeholder: "Answer" %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.collection_select(:station_id, Station.all, :id, :title) %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-12">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
