<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h1 class="display-4"><span class='emphasis'>Prepare</span> for UK Specialty Interviews</h1>
      </div>
    </div>
    <div class="row carousel-container">
      <div class='col-lg-3 offset-lg-2 text-right align-self-cente py-3'>
        <h2>I'm applying for...</h2>
      </div>
      <div class="col-lg-5">
        <div id="carousel-main" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @courses.each do |course| %>
              <div class="carousel-item<%= " active".html_safe if course == @courses.first %>">
                <div class="d-block wd-100 text-center">
                  <h2 class='carousel-header'><%= link_to course.title, course_path(course) %></h2>
                </div>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carousel-main" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel-main" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class='col-lg-12 text-center pt-2'>
        <div class='pt-4'>
          <%= link_to "#course-scroll-target", class: "btn btn-lg btn-primary dropdown-toggle" do %>
          Find my course
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="welcome-section" id="course-scroll-target"> <!-- data-aos="fade-up" -->
  <div class="container">
    <div class="row">
      <div class='col-sm-12 text-center'>
        <h2>Available courses:</h2>
      </div>
    </div>
      <% i = 1 %>
      <% @courses.each do |course| %>
        <%= "<div class='row course-card-row'>".html_safe if (i % 4 - 1 == 0) %>
          <div class="col-lg-3">
            <%= render "courses/course_card", obj: course %>
          </div>
          <% if (i % 4 == 0) || course.id == Course.last.id %>
            <%= "</div><!-- close row -->".html_safe  %>
          <% end %>
        <% i += 1 %>
      <% end %>
  </div>
</div>

