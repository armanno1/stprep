<div class="jumbotron">
  <div class="row row-eq-height">
    <div class="col-md-8 offset-md-1 hero-left text-left">
      <h1 class="display-4">Prepare for UK Specialty<br /> Interviews</h1>
      <p class='lead'>UK Core and Specialty interview courses</p>
      <div class='pt-4'>
        <%= link_to "See all courses", courses_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
</div>

<div class="welcome-section" id="course-scroll-target"> <!-- data-aos="fade-up" -->
  <div class="container">
    <div class="row">
      <div class='col-sm-12 text-center'>
        <h2>Courses</h2>
      </div>
    </div>
      <% i = 1 %>
      <% @courses.each do |course| %>
        <%= "<div class='row course-card-row'>".html_safe if (i % 4 - 1 == 0) %>
          <div class="col-lg-3">
            <%= render "courses/course_card", obj: course %>
          </div>
          <% if (i % 4 == 0) || course.id == Course.last.id %>
            <%= "</div><!-- close row -->".html_safe  %>
          <% end %>
        <% i += 1 %>
      <% end %>
  </div>
</div>

