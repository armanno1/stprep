<% if obj.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="panel-title">
        <%= pluralize(obj.errors.count, "error") %>:
      </h2>
      <ul>
        <% obj.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
