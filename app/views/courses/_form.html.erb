<div class="row">
  <% if user_signed_in? && current_user.admin? %>
  <div class='col-sm-4'>
    <h3>Users signed up to this course:</h3><br />
    <ul>
    <% if @course.users.any? %>
      <ul>
      <% @course.users.each do |user| %>
        <li><%= user.email %></li>
      <% end %>
      </ul>
    <% else %>
      <p>No users are signed up yet...</p>
    <% end %>
  </div>
  <% end %>
  <div class="col-sm-8">
    <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of course", autofocus: true  %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Course Description" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-sm-2">
          <%= f.label :category %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :category, rows: 10, class: "form-control", placeholder: "Course Category" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="control-label col-sm-2">
          <%= f.label :price %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='row'>
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
