<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= obj.title %><br />
      <%= "<span class='badge badge-warning'>Subscribed</span>".html_safe if user_signed_in? && current_user.courses.find_by_id(obj.id) %>
    </h5>
    <p class="card-text"><%= obj.description %></p>
    <div>
    <% if user_signed_in? && current_user.courses.find_by_id(obj.id) %>
      <%= link_to "Go to course", course_path(obj), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Â£#{obj.price}", course_path(obj), class: "btn btn-primary" %>
    <% end %>
    </div>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_course_path(obj), class: "btn btn-sm btn-warning mt-3" %>
      <%= link_to 'Delete', course_path(obj), method: :delete, class: "btn btn-sm btn-warning mt-3" %>
    <% end %>
  </div>
</div>
