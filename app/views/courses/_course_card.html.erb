<div class="card course-card mt-4">
  <%= link_to course_path(obj) do %>
    <div class="card-header">
      <h2><%= obj.title %></h2>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= obj.description %>
      </p>
    </div>
    <div class='card-footer text-right'>
      <% if user_signed_in? && current_user.courses.find_by_id(obj.id) %>
        <%= link_to "Subscribed", course_path(obj), class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Find out more", course_path(obj), class:"btn btn-outline-primary" %>
      <% end %>
      <% if user_signed_in? && current_user.admin? %>
      <div style='border-top: 1px solid #EEE;' class='mt-3'>
        <%= link_to 'Edit', edit_course_path(obj), class: "btn btn-sm btn-link" %>
        <%= link_to 'Delete', course_path(obj), method: :delete, class: "btn btn-sm btn-link" %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
