<%= render 'shared/errors', obj: @course %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of course", autofocus: true  %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class='col-sm-10'>
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Course Description" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :category %>
      </div>
      <div class='col-sm-10'>
        <%= f.text_field :category, rows: 10, class: "form-control", placeholder: "Course Category" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :price %>
      </div>
      <div class='col-sm-10'>
        <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
