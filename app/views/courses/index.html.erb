<% @courses.each do |course| %>
  <%= "<div class='row' style='padding-top: 30px;'>".html_safe if (course.id % 3 - 1 == 0) %>
    <div class='col-md-4'>
      <div class="card">
        <div class="card-body">
          <h5 class="card-header"><%= course.title %></h5>
          <p class="card-body"><%= course.description %></p>
          <%= link_to "Â£#{course.price}", course_path(course), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <%= "</div><!-- close row -->".html_safe if (course.id % 3 == 0) %>
<% end %>
