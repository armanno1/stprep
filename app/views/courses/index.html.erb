<% i = 1 %>
<% @courses.each do |course| %>
  <%= "<div class='row' style='padding-top: 30px;'>".html_safe if (i % 4 - 1 == 0) %>
    <div class="col-lg-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= course.title %><br />
            <%= "<span class='badge badge-warning'>Subscribed</span>".html_safe if user_signed_in? && current_user.courses.find_by_id(course.id) %>
          </h5>
          <p class="card-text"><%= course.description %></p>
          <% if user_signed_in? && current_user.courses.find_by_id(course.id) %>
          <%= link_to "Go to course", course_path(course), class: "btn btn-primary" %>
          <% else %>
          <%= link_to "Â£#{course.price}", course_path(course), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  <%= "</div><!-- close row -->".html_safe if (i % 4 == 0) %>
  <% i += 1 %>
<% end %>
